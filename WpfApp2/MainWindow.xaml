<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="172" Width="288">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Button x:Name="signUp_Button" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="6" FontSize="18" Click="SignUp_Click">Sign up</Button>
        <Button x:Name="login_Button" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="6" FontSize="18" Click="Login_Click">Login</Button>
    </Grid>
</Window>
